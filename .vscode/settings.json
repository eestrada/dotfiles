{
    "editor.smoothScrolling": true,
    "explorer.excludeGitIgnore": false,
    "files.associations": {
        "*.cron": "crontab"
    },
    "files.exclude": {
        "**/.Trash": true
    },
    "git.autofetch": "all",
    "git.autofetchPeriod": 300,
    "search.exclude": {
        ".base16-shell": true,
        ".dotfile_misc/color-themes/base16-i3": true,
        ".dotfile_misc/color-themes/base16-xfce4-terminal": true,
        ".vim/pack/eestrada/start/base16-vim": true,
        ".vscode/extensions": true
    },
    "search.useGlobalIgnoreFiles": true,
    "search.useParentIgnoreFiles": true,
    "todo-tree.filtering.excludeGlobs": [
        "**/node_modules"
    ],
    "todo-tree.filtering.ignoreGitSubmodules": true,
    "todo-tree.filtering.includeHiddenFiles": true,
    "todo-tree.filtering.passGlobsToRipgrep": true,
    "todo-tree.filtering.useBuiltInExcludes": "file and search excludes",
    "todo-tree.general.debug": true,
    "todo-tree.general.enableFileWatcher": true,
    "todo-tree.general.showActivityBarBadge": true,
    "todo-tree.general.showIconsInsteadOfTagsInStatusBar": false,
    "todo-tree.general.statusBar": "total",
    "todo-tree.highlights.backgroundColourScheme": [
        "red",
        "orange",
        "yellow",
        "yellow",
        "blue",
        "indigo",
        "violet"
    ],
    "todo-tree.highlights.useColourScheme": false,
    "todo-tree.ripgrep.usePatternFile": true
}